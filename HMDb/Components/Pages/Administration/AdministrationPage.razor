@page "/Administration"

<PageTitle>Administration</PageTitle>

@using HMDb.Data

@inject IProductCategoryData db_ProductCategoryData
@inject IProductTypeData db_ProductTypeData

<MudText Typo="Typo.h4">Administration</MudText>

<MudText Typo="Typo.body1">Product Categories count: @_productCategoryCount</MudText>
<MudNavLink Href="/Administration/ProductCategories" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ViewList">Product Categories</MudNavLink>

<MudText Typo="Typo.body1">Product Types count: @_productTypeCount</MudText>
<MudNavLink Href="/Administration/ProductTypes" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ViewList">Product Types</MudNavLink>

<MudText Typo="Typo.body1">Inventories count: @_inventoryCount</MudText>
<MudNavLink Href="/Administration/" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.ViewList">Inventories</MudNavLink>
