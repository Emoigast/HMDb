@page "/Administration/ProductCategories"

@using HMDb.Data

@inject IProductCategoryData db_ProduktKategoriData
@inject IDialogService DialogService

<PageTitle>ProduktKategorier</PageTitle>

<MudText Typo="Typo.h4">Produktkategorier</MudText>

<MudForm @ref="form">
    <MudTextField T="string" Label="Product Category Name"
                  @bind-Value="_productCategoryName"
                  Required="true"
                  Immediate="true"
                  Placeholder="Enter category name"
                  HelperText="This field is required."
                  Validation="@(new Func<string, string>(ValidateName))" />
    <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="CreateProductCategory">
        Skapa ny
    </MudButton>
</MudForm>
<MudButton Color="Color.Primary" Variant="Variant.Filled">
    Öppna Dialog
</MudButton>

@if (_productCategory is not null)
{
    <MudSimpleTable Dense="true" Hover="true" Bordered="true" Class="mt-6">
        <thead>
            <tr>
                <td>Id</td>
                <td>Benämning</td>
                <td>Åtgärder</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var productCategory in _productCategory)
            {
                <tr>
                    <td>@productCategory.Id</td>
                    <td>@productCategory.Name</td>
                    <td>
                        <MudIconButton Color="Color.Warning" Variant="Variant.Filled" Icon="@Icons.Material.Filled.Edit" />
                        <MudIconButton Color="Color.Error" Variant="Variant.Filled" Icon="@Icons.Material.Filled.Delete" OnClick="e => DeleteProductCategory(productCategory)" />
                    </td>
                </tr>
            }
        </tbody>
    </MudSimpleTable>
}
