@page "/Administration/ProductCategories"

@using HMDb.Data

@inject IProductCategoryData db_ProductCategoryData
@inject IDialogService DialogService

<PageTitle>Product Categories</PageTitle>

<MudText Typo="Typo.h4">Product Categories</MudText>

<MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OpenCreateProductCategoryDialog">
    Create new
</MudButton>

<MudSimpleTable Dense="true" Hover="true" Bordered="true">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @if (_productCategory.Count() > 0)
        {
            @foreach (var productCategory in _productCategory)
            {
                <tr>
                    <td>@productCategory.Id</td>
                    <td>@productCategory.Name</td>
                    <td>
                        <MudIconButton OnClick="e => OpenEditProductCategoryDialog(productCategory)" Color="Color.Warning" Variant="Variant.Filled" Size="Size.Small" Icon="@Icons.Material.Filled.Edit" />
                        <MudIconButton Color="Color.Error" Variant="Variant.Filled" Size="Size.Small" Icon="@Icons.Material.Filled.Delete" />
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>-</td>
                <td>No Categories found</td>
                <td>-</td>
            </tr>
        }
    </tbody>
</MudSimpleTable>
